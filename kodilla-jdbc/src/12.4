SELECT I.SUMMARY AS ISSUE, L.NAME AS STATUS
FROM ISSUESLISTS L, ISSUES I
WHERE I.ISSUESLIST_ID = L.ID;

SELECT I.SUMMARY AS ISSUE, CONCAT(U.FIRSTNAME, " ", U.LASTNAME) AS USER
FROM USERS U, ISSUES I
WHERE I.USER_ID_ASSIGNED_TO = U.ID;

SELECT CONCAT(U.FIRSTNAME, " ", U.LASTNAME) AS USER, COUNT(*) AS ISSUES
FROM USERS U, ISSUES I
WHERE I.USER_ID_ASSIGNED_TO = U.ID
GROUP BY I.USER_ID_ASSIGNED_TO
HAVING COUNT(*) > 0
ORDER BY USER;